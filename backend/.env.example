# Backend Configuration
# Most settings have sensible defaults in config.py

# Database (default: SQLite)
DATABASE_URL=sqlite:///./video_generator.db

# Redis (required for job queue)
REDIS_URL=redis://localhost:6379/0

# CORS origins (add your frontend URL)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Application
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# API Authentication (leave empty for development mode - no auth required)
API_KEY=

# API Keys (add your keys here for full functionality)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
REPLICATE_API_KEY=
ELEVENLABS_API_KEY=
GEMINI_API_KEY=

# Music Video Module
MV_DEBUG_MODE=false
MOCK_VID_GENS=true

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8001
DYNAMODB_REGION=us-east-1
DYNAMODB_TABLE_NAME=MVProjects
USE_LOCAL_DYNAMODB=true

# AWS Credentials (for local dev, can use fake values)
STORAGE_BACKEND=s3
STORAGE_BUCKET=video-generator-storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
SERVE_FROM_CLOUD=true

# Mock Video Generation Delay (in seconds)
# Control the simulated processing delay when MOCK_VID_GENS is enabled
# The actual delay will be a random value between MIN and MAX
MOCK_VIDEO_DELAY_MIN=5.0
MOCK_VIDEO_DELAY_MAX=10.0