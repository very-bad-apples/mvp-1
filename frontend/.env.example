# WebSocket URL (client-side - needed for WebSocket connections)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Server-side only variables (not exposed to browser)
BACKEND_URL=http://localhost:8000
API_KEY=your-api-key-here

# Application Settings
NEXT_PUBLIC_APP_NAME="AI Video Generator"
NEXT_PUBLIC_MAX_VIDEO_DURATION=300
NEXT_PUBLIC_MAX_FILE_SIZE=104857600

# Project Storage (Development)
# Path to the file-backed project storage (defaults to .dev-projects.json)
PROJECTS_STORAGE_FILE=.dev-projects.json
