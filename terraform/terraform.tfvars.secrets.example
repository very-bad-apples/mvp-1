# =============================================================================
# Secrets Configuration for ECS Deployment
# =============================================================================
# IMPORTANT: Do NOT commit this file with real values!
# Add terraform.tfvars to .gitignore
# 
# For production, it's recommended to:
# 1. Use AWS Secrets Manager CLI to set secrets (see update-secrets.sh)
# 2. Set these as empty strings in terraform.tfvars
# 3. Update secrets using the AWS CLI or Console
# =============================================================================

# =============================================================================
# API Keys (All Optional - Leave empty if not using)
# =============================================================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/settings/keys
anthropic_api_key = ""

# OpenAI API Key  
# Get from: https://platform.openai.com/api-keys
openai_api_key = ""

# Replicate API Key (for video generation models)
# Get from: https://replicate.com/account/api-tokens
replicate_api_key = ""

# ElevenLabs API Key (for voice/audio generation)
# Get from: https://elevenlabs.io/app/settings/api-keys
elevenlabs_api_key = ""

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
gemini_api_key = ""

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (SQLite for dev, PostgreSQL for production)
# Examples:
#   SQLite:     "sqlite:///./video_generator.db"
#   PostgreSQL: "postgresql://user:password@host:5432/dbname"
database_url = "sqlite:///./video_generator.db"

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed origins for CORS (comma-separated in environment, list here)
cors_allowed_origins = [
  "http://localhost:3000",   # Local development frontend
  "http://localhost:3001",   # Alternative local port
  # Add your production frontend URL here:
  # "https://yourdomain.com",
  # "https://www.yourdomain.com"
]

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 
# Option 1: Use this file (Quick setup, less secure)
# 1. Copy this file: cp terraform.tfvars.secrets.example terraform.tfvars
# 2. Fill in your API keys above
# 3. Make sure terraform.tfvars is in .gitignore
# 4. Run: terraform apply
# 
# Option 2: Use AWS Secrets Manager (Recommended for production)
# 1. Run: terraform apply (with empty API keys)
# 2. Run: ./update-secrets.sh
# 3. Enter your API keys when prompted
# 4. Force new ECS deployment to pick up secrets
# 
# Option 3: Use environment variables
# Export TF_VAR_* environment variables:
#   export TF_VAR_anthropic_api_key="your-key"
#   export TF_VAR_openai_api_key="your-key"
#   terraform apply
# 
# =============================================================================

